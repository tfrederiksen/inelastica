AtomicCoordinatesFormat Ang
%block AtomicCoordinatesOrigin
        0.0000        0.0000       4.209945789
%endblock AtomicCoordinatesOrigin

SystemTitle CuCO
SystemLabel CuCO

TS.Elecs.Neglect.Principal true
SaveTotalPotential true
SaveRho true

SolutionMethod      transiesta
MullikenInSCF       false

###SlabDipoleCorrection true

MD.TypeOfRun        CG
MD.NumCGsteps       0
MD.UseSaveCG        true
MD.UseSaveXV        true
MD.MaxForceTol	    0.04 eV/Ang
UseSaveData         true

DM.UseSaveDM        true
DM.NumberPulay      7
DM.MixingWeight     0.02
DM.Tolerance        1e-5
MaxSCFIterations    1000

MeshCutoff          200. Ry

%block kgrid_Monkhorst_Pack
 4    0    0    0.0
 0    4    0    0.0
 0    0    1    0.0
%endblock kgrid_Monkhorst_Pack

%block GeometryConstraints
position from 1 to 48
position from 84 to 99
%endblock GeometryConstraints

%block ChemicalSpeciesLabel
    1    6 C.mpn                   # Species index, atomic number, species label
    2    8 O.mpn                   # Species index, atomic number, species label
    3   29 Cu.mpn                  # Species index, atomic number, species label
%endblock ChemicalSpeciesLabel

PAO.BasisType   split
PAO.EnergyShift 0.001 Ry
%block  PAO.BasisSizes
	Cu.mpn		SZP
        C.mpn		DZP
	O.mpn		DZP
%endblock PAO.BasisSizes

XC.functional   GGA
XC.authors      PBE

